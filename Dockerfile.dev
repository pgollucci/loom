# Lightweight builder image for development operations (build, test, lint, fmt).
# Matches the builder stage of the production Dockerfile minus the source copy
# and compile steps, so it can be used with a bind-mounted working directory.
FROM golang:1.25

RUN apt-get update && apt-get install -y --no-install-recommends \
    git ca-certificates tzdata gcc g++ libicu-dev openssh-client bash bc \
    && rm -rf /var/lib/apt/lists/*

RUN git config --global safe.directory '*'

WORKDIR /build
